#!/usr/bin/env python3

import numpy as np, matplotlib.pyplot as plt, random

from integrate import f, integrate, integrate_mc


if __name__ == '__main__':

# riemann sum
    sum1 = integrate(f, 0, 5)
    print(sum1)

# between 0 and 5 0.25x^4 goes to just under 160. Use -10, 170 as the bounding box

    sum2 = integrate_mc(f, 0, 5, (-10, 160))

    print(sum2)

# plot curve
    a = np.linspace(0, 5, 100)
    y = []
    for i in a:
        y.append(f(i))

    plt.plot(a, y)  # plot x^4 / 4
    plt.grid(True)

    plt.show()
